<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

    <Button
        android:id="@+id/btnProssequir"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/concert_one"
        android:gravity="center"
        android:padding="12dp"
        android:visibility="gone"
        android:text="Prosseguir"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteCidade" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/concert_one"
            android:text="Interesses"
            android:textColor="#8900DD"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteCidade"
            android:layout_width="331dp"
            android:layout_height="42dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/lupa"
            android:drawablePadding="20dp"
            android:hint="Digite sua cidade"
            android:paddingStart="4dp"
            android:textColor="#000000"
            android:textColorHint="#7E7E7E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />
    </androidx.constraintlayout.widget.ConstraintLayout>